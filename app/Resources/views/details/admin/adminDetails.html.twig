<div class="container-fluid">
    <div class="row" id="admin-bar"></div>
    <div class="row">
        <div class="col-lg-12" id="main-container-details">
            <div class="col-lg-12" id="profile">
                <div class="panel panel-default container-fluid">
                    <div class="panel-heading row">
                        <button class="btn btn-default btn-xs pull-left"
                                id="quick-close"
                                onclick="closeView('details')">Close
                        </button>
                        <button class="btn btn-default btn-xs pull-right"
                                id="quick-edit"
                                onclick="editAdmin()">Edit
                        </button>
                        <h3 id="admin-name"></h3>
                        <span hidden></span>
                    </div>
                    <div class="panel-body">
                        <div class="col-lg-6" val="" id="admin-id" hidden></div>
                        <div class="col-lg-8" id="admin-phone"></div>
                        <div class="col-lg-8" id="admin-email"></div>
                        <select class="col-lg-8" id="admin-role" disabled>
                            <option id="0" value="role-none">No Role</option>
                            <option id="1" value="role-owner">Owner</option>
                            <option id="2" value="role-manager">Manager</option>
                            <option id="3" value="role-sales">Sales</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>