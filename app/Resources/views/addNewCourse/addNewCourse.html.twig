<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-12" id="buttons">
                <div class="col-lg-6 btn-left">
                    <button class="btn btn-success" id="save-btn" type="submit">
                        <i class="fa fa-floppy-o fa-2x" aria-hidden="true"></i>
                    </button>
                </div>
                <div class="col-lg-6 btn-right">
                    <button class="btn btn-success" id="edit-btn" type="submit">
                        <i class="fa fa-pencil fa-2x" aria-hidden="true"></i>
                    </button>
                    <button class="btn" id="close-btn" type="submit">
                        <i class="fa fa-times fa-2x" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
            <form class="form-signin">
                <h2 class="form-signin-heading text-center">Add Course</h2>
                <br>
                <label for="name" class="sr-only">Course Name</label>
                <input type="text" id="name" class="form-control" placeholder="Course Name" required autofocus>
                <label for="desc" class="sr-only">Description</label>
                <input type="text" id="desc" class="form-control" placeholder="Description" required>
                <br>
                <div>
                    <img src="http://placehold.it/250x250" alt="placeholdit">
                </div>
            </form>
        </div>
    </div>
</div>