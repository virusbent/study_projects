

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-12" id="buttons">
                <div class="col-lg-6 btn-left">
                    <button class="btn btn-success" id="save-btn" type="submit">
                        <i class="fa fa-floppy-o fa-2x" aria-hidden="true"></i>
                    </button>
                </div>
                <div class="col-lg-6 btn-right">
                    <button class="btn btn-danger" id="delete-btn" type="submit">
                        <i class="fa fa-trash-o fa-2x" aria-hidden="true"></i>
                    </button>
                    <button class="btn" id="close-btn" type="submit">
                        <i class="fa fa-times fa-2x" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
            <form class="form-signin">
                <h2 class="form-signin-heading text-center">Add Student</h2>
                <br>
                <label for="name" class="sr-only">Name</label>
                <input type="text" id="name" class="form-control" placeholder="Name" required autofocus>
                <label for="phone" class="sr-only">Phone</label>
                <input type="text" id="phone" class="form-control" placeholder="Phone" required>
                <label for="email" class="sr-only">Email</label>
                <input type="email" id="email" class="form-control" placeholder="eMail" required>
                <br>
                <div>
                    <img src="http://placehold.it/250x250" alt="placeholdit">
                </div>
                <div id="student-courses">
                    <ul class="list-group" id="list-of-courses">
                        <li class="list-group-item" id="course-item"></li>
                    </ul>
                </div>
            </form>
        </div>
    </div>
</div>
